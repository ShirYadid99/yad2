        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-center fw-bold"><%= item.title %></h5>
            <p class="card-text">Description: <%= item.description %></p>
            <p class="card-text">Price: â‚ª<%= item.price %></p>
            <p class="card-text">Phone: <%= item.phone %></p>
